{{> adminheader}}
<div class="container text-center " >
    <div  style="background-color: red;">
        {{#each error}}
        <h1 class="row mx-auto">{{msg}}</h1>
        {{/each}}
        
    </div>
</div>
<div class="row mt-3">
    <div class="col-12 text-right mb-2">
        <a href="/category/add" class="btn btn-primary btn-index">
            <i class="fas fa-plus"></i>
            Add new category
        </a>
    </div>
    <div class="col-12">
        <table class="table table-bordered table-striped w-100" style="background-color: white;">
            <thead class="bg-dark text-white">
                <tr>
                   
                    <th>Name</th>
                   
                    <th>Show on menu</th>
                    <th>Action</th>
                </tr>
            </thead>
            {{#each categories}}
            <tbody>
           
                <tr>
                   
                    <td>{{name}}</td>
                   
                    <td>
{{enabled}}

                    </td>
                    <td>
                        <a href="/category/edit/{{_id}}" class="btn btn-warning" title="Edit this category">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/category/delete/{{_id}}" class="btn btn-danger" title="Delete this category">
                            <i class="fas fa-times"></i>
                        </a>
                    </td>
                </tr>
               
                
            </tbody>
            {{/each}}
        </table>
    </div>
</div>

{{> adminfooter}}